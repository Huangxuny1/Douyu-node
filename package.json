{
  "name": "DouyuBarrage",
  "version": "1.0.0",
  "main": "dist/entry.js",
  "scripts": {
    "start": "tsc && cross-env NODE_ENV=production node dist/entry.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch 'src/**/*' -e ts,tsx --exec 'ts-node' ./src/entry.ts",
    "lint": "eslint ./src/**/**/*.ts ./src/**/*.ts ./src/*.ts",
    "format": "prettier --config .prettierrc --write ./src/**/**/*.ts ./src/**/*.ts ./src/*.ts",
    "precommit": "npm run lint && npm run format"
  },
  "author": "Athos",
  "license": "MIT",
  "dependencies": {
    "koa": "^2.11.0",
    "koa-body": "^4.1.1",
    "koa-router": "^8.0.8",
    "md5": "^2.2.1",
    "qrcode": "^1.4.4",
    "set-cookie-parser": "^2.4.5",
    "socket.io": "^2.3.0",
    "superagent": "^5.2.2",
    "typescript": "^3.8.3",
    "ws": "^7.2.5"
  },
  "devDependencies": {
    "@types/koa": "^2.11.3",
    "@types/koa-router": "^7.4.0",
    "@types/log4js": "^2.3.5",
    "@types/md5": "^2.2.0",
    "@types/qrcode": "^1.3.4",
    "@types/set-cookie-parser": "^0.0.6",
    "@types/socket.io": "^2.1.4",
    "@types/superagent": "^4.1.7",
    "@types/validator": "^12.0.1",
    "@types/ws": "^7.2.4",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "eslint": "^6.8.0",
    "eslint-config-alloy": "^3.6.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5"
  }
}
