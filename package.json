{
  "name": "douyu-node",
  "version": "1.0.0",
  "description": "Douyu Node.js",
  "main": "build/index.js",
  "scripts": {
    "start": "tsc && cross-env NODE_ENV=production node build/index.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch 'src/**/*' -e ts,tsx --exec 'ts-node' ./src/index.ts",
    "format": "prettier --config .prettierrc --write ./src/**/**/*.ts ./src/**/*.ts ./src/*.ts"
  },
  "repository": "https://github.com/Huangxuny1/douyu-node.git",
  "author": "AthosZhou",
  "license": "MIT",
  "dependencies": {
    "log4js": "^6.3.0",
    "superagent": "^5.2.2",
    "typescript": "^3.9.5",
    "ws": "^7.3.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/log4js": "^2.3.5",
    "@types/node": "^14.0.13",
    "@types/superagent": "^4.1.7",
    "@types/ws": "^7.2.5",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0"
  }
}
